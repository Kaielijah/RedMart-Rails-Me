<% provide(:title, @product.name) %>


<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
<h1><%= @product.name %></h1>

<ul>
  <!-- Product image -->

<li>  <%= @product.description %></li>
<li>    $<%= @product.price %> </li>
</ul>
</section>
  </aside>
  <!-- product review -->
  <div class="col-md-8">
    <% if @product.microposts.any? %>
      <h3>Reviews (<%= @product.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>

    <!--posting of review here  -->
    <% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>
<% else %>
  </div>
  <%end%>
